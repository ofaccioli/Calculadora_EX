<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|bottom"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/processar"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:gravity="end|center"
        />
    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:gravity="end|center"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="6"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="440dp"
            android:layout_height="100dp">

            <Button
                android:id="@+id/dividir"
                android:layout_width="101dp"
                android:layout_height="match_parent"
                android:background="#FF9800"
                android:text="/"
                android:textSize="30sp" />

            <Button
                android:id="@+id/parenteses"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#FF9800"
                android:text="()"
                android:textSize="30sp"

                />

            <Button
                android:id="@+id/porcento"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#FF9800"
                android:text="%"
                android:textSize="30sp" />

            <Button
                android:id="@+id/limpar"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:background="#FF9800"
                android:onClick="limpar"
                android:text="C"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">


            <Button
                android:id="@+id/sete"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />

            <Button
                android:id="@+id/oito"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/nove"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/multiplicar"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:background="#FF9800"
                android:text="*"

                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">


            <Button
                android:id="@+id/quatro"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />

            <Button
                android:id="@+id/cinco"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/seis"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/subtrair"
                android:layout_height="match_parent"
                android:textSize="40sp"
                android:background="#FF9800"
                android:text="-"
                android:layout_width="110dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <Button
                android:id="@+id/um"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />

            <Button
                android:id="@+id/dois"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/tres"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/somar"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:background="#FF9800"
                android:text="+"
                android:layout_width="110dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <Button
                android:id="@+id/apagar"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="101dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:drawableStart="@drawable/ic_backspace_black_24dp"
                android:onClick="apagar"
                android:paddingStart="40sp"
                android:textSize="30sp" />

            <Button
                android:id="@+id/zero"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/ponto"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/igual"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:text="="
                android:onClick="igual"
                android:layout_width="110dp"
                android:background="#FF5722"
                />

        </LinearLayout>

    </GridLayout>

</LinearLayout>